<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Theme Switcher"
        Height="250"
        Width="400"
        Style="{DynamicResource MainWindowStyle}"
        FontFamily="{DynamicResource AppFont}"
        FontSize="{DynamicResource AppFontSize}">
    <StackPanel Margin="10">
        <TextBlock Text="Введите текст:" FontSize="16" Margin="5"/>
        <TextBox x:Name="InputTextBox"/>
        <WrapPanel HorizontalAlignment="Center">
            <Button Content="Светлая тема" Click="LightTheme_Click"/>
            <Button Content="Тёмная тема" Click="DarkTheme_Click"/>
            <Button Content="Сменить шрифт" Click="ToggleFont_Click"/>
            <Button Content="Изменить размер шрифта" Click="ToggleFontSize_Click"/>
        </WrapPanel>
    </StackPanel>
</Window>
